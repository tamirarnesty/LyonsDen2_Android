<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/navigationBar</item>
        <item name="colorPrimaryDark">@color/navigationBar</item>
        <item name="colorAccent">@color/navigationBar</item>
        <!-- Set Action Bar Text Color -->
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>
    </style>

    <style name="LyonsLoader" parent="Theme.AppCompat.Dialog">
        <item name="android:divider">@android:color/transparent</item>
    </style>

    <!-- Set Action Bar Text Color -->
    <style name="AppTheme.ActionBarTheme" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/accent</item>
    </style>

    <style name="LyonsToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="DrawerListStyle">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left|start</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@color/listDivider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/cellEvent</item>
    </style>

    <style name="LyonsButtonStyle">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <!-- SplashScreen Theme, must be a theme to be a splash -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Calendar Theme -->
    <style name="LyonsCalendar" parent="CaldroidDefault">
        <item name="styleCaldroidViewLayout">@style/LyonsCalendarViewLayout</item>
        <item name="styleCaldroidMonthName">@style/LyonsMonthName</item>
        <item name="styleCaldroidNormalCell">@style/LyonsNormalCell</item>
        <item name="styleCaldroidSquareCell">@style/LyonsSquareCell</item>
        <item name="styleCaldroidGridView">@style/LyonsGridView</item>
        <item name="styleCaldroidLeftArrow">@style/LyonsLeftButton</item>
        <item name="styleCaldroidRightArrow">@style/LyonsRightButton</item>
        <item name="styleCaldroidWeekdayView">@style/LyonsWeekday</item>
    </style>

    <style name="LyonsCalendarViewLayout"> <item name="android:background">@color/background</item> </style>

    <style name="LyonsMonthName" parent="CaldroidDefaultMonthName">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="LyonsGridView" parent="CaldroidDefaultGridView">
        <item name="android:horizontalSpacing">5dp</item>
        <item name="android:verticalSpacing">5dp</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:background">@color/background</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:listSelector">@drawable/calendar_cell_selector</item>
    </style>

    <style name="LyonsCell" parent="CaldroidDefaultCell">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:background">@drawable/calendar_cell</item>
    </style>

    <style name="LyonsNormalCell" parent="LyonsCell">
        <item name="android:padding">7dp</item>
    </style>

    <style name="LyonsSquareCell" parent="LyonsCell" />

    <style name="LyonsArrowButton">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="LyonsRightButton" parent="LyonsArrowButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/right_arrow</item>
        <item name="android:tint">@color/accent</item>
    </style>

    <style name="LyonsLeftButton" parent="LyonsArrowButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/left_arrow</item>
        <item name="android:tint">@color/accent</item>
    </style>

    <style name="LyonsWeekday" parent="CaldroidDefaultWeekday">
        <item name="android:textColor">@color/accent</item>
    </style>

    <!-- Home Screen Themes -->
    <style name="TimeTablePeriodContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">false</item>
        <item name="android:longClickable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/timeTableBackground</item>
    </style>

    <style name="TimeTablePeriodParameter">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!-- User Screen Themes -->
    <style name="UserParameterLabel">
        <item name="android:layout_width">@dimen/USTextLabelWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="UserParameterField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="UserButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:onClick">editAccount</item>
    </style>

    <!-- Announcement Proposal Themes -->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/input_field_default</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <!-- Contact Screen Themes -->
    <style name="ContactButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <style name="ExtraButtonStyle" parent="LyonsButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Course View Themes -->
    <style name="CourseViewLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CourseViewField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ems">10</item>
    </style>
</resources>
