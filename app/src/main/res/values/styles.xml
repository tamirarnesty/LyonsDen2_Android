<resources>
    <!-- TODO: CLEAN THIS UP, AFTER DATE PICKER VISUALIZATION -->

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/navigationBar</item>
        <item name="colorPrimaryDark">@color/navigationBar</item>
        <item name="colorAccent">@color/navigationBar</item>
        <!-- Set Action Bar Text Color -->
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>
    </style>

    <!-- Set Action Bar Text Color -->
    <style name="AppTheme.ActionBarTheme" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/navigationBarText</item>
    </style>

    <!--<style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">-->
        <!--<item name="android:color">@color/navigationBarText</item>-->
    <!--</style>-->

    <style name="DrawerListStyle">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left|start</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@color/listDivider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/background</item>
    </style>

    <!-- SplashScreen Theme, must be a theme to be a splash -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Calendar Theme -->
    <style name="LyonsCalendar" parent="CaldroidDefault">
        <item name="styleCaldroidViewLayout">@style/LyonsCalendarViewLayout</item>
        <item name="styleCaldroidMonthName">@style/LyonsMonthName</item>
        <item name="styleCaldroidNormalCell">@style/LyonsNormalCell</item>
        <item name="styleCaldroidSquareCell">@style/LyonsSquareCell</item>
        <item name="styleCaldroidGridView">@style/LyonsGridView</item>
        <item name="styleCaldroidLeftArrow">@style/LyonsLeftButton</item>
        <item name="styleCaldroidRightArrow">@style/LyonsRightButton</item>
        <item name="styleCaldroidWeekdayView">@style/LyonsWeekday</item>
    </style>

    <style name="LyonsCalendarViewLayout"> <item name="android:background">@color/background</item> </style>

    <style name="LyonsMonthName" parent="CaldroidDefaultMonthName">
        <item name="android:textColor">@color/navigationBarText</item>
    </style>

    <style name="LyonsGridView" parent="CaldroidDefaultGridView">
        <item name="android:horizontalSpacing">5dp</item>
        <item name="android:verticalSpacing">5dp</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:background">@color/background</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:listSelector">@drawable/calendar_cell_selector</item>
    </style>

    <style name="LyonsCell" parent="CaldroidDefaultCell">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:background">@drawable/calendar_cell</item>
    </style>

    <style name="LyonsNormalCell" parent="LyonsCell">
        <item name="android:padding">5dp</item>
    </style>

    <style name="LyonsSquareCell" parent="LyonsCell" />

    <style name="LyonsArrowButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="LyonsRightButton" parent="LyonsArrowButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/right_arrow</item>
        <item name="android:tint">@color/navigationBarText</item>
    </style>

    <style name="LyonsLeftButton" parent="LyonsArrowButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/left_arrow</item>
        <item name="android:tint">@color/navigationBarText</item>
    </style>

    <style name="LyonsWeekday" parent="CaldroidDefaultWeekday">
        <item name="android:textColor">@color/navigationBarText</item>
    </style>

    <!-- Home Screen Themes -->
    <style name="TimeTablePeriodContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">periodClicked</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/textFieldBackground</item>
    </style>

    <style name="TimeTablePeriodParameter">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!-- User Screen Themes -->
    <style name="UserParameterLabel">
        <item name="android:layout_width">@dimen/USTextLabelWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="UserParameterField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
        <item name="android:enabled">false</item>
        <item name="android:clickable">false</item>
        <item name="android:inputType">none</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:background">@color/textFieldBackground</item>
    </style>

    <style name="UserButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:onClick">editAccount</item>
    </style>

    <!-- Announcement Proposal Themes -->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/input_field_default</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

