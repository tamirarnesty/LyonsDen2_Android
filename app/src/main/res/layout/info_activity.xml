<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/backgroundColor"
    android:id="@+id/ISContentView"
    tools:context="com.wlmac.lyonsden2_android.resourceActivities.InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clipChildren="true"
        android:id="@+id/ISTopSection">

        <ImageView
            android:layout_width="@dimen/ISImageViewWidth"
            android:layout_height="@dimen/ISImageViewHeight"
            android:layout_weight="0.75"
            android:contentDescription="@string/ISImageContentDescription"
            android:id="@+id/ISImageView"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/ISImageViewHeight"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:gravity="start"
            android:text="@string/ISTitleDefault"
            android:textColor="@color/accentColor"
            android:textSize="@dimen/ISTitleTextSize"
            android:id="@+id/ISTitleLabel"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ISDescriptionHeight"
        android:layout_below="@id/ISTopSection"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/ISDescriptionDefault"
        android:textColor="@color/accentColor"
        android:textSize="@dimen/ISTextSize"
        android:id="@+id/ISDescriptionLabel"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ISDescriptionLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ISTimeDefault"
            android:textColor="@color/accentColor"
            android:textSize="@dimen/ISTextSize"
            android:id="@+id/ISDateLabel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:gravity="right|end"
            android:text="@string/ISLocationDefault"
            android:textColor="@color/accentColor"
            android:textSize="@dimen/ISTextSize"
            android:id="@+id/ISLocationLabel"/>
    </LinearLayout>
</RelativeLayout>
