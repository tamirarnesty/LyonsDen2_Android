<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="8dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/accent"
        android:textSize="@dimen/textSize17Label"
        android:id="@+id/LATitle"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/accent"
        android:textSize="@dimen/textSize14Details"
        android:id="@+id/LASubtitle"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        android:textColor="@color/accent"
        android:textSize="@dimen/textSize14Details"
        android:id="@+id/LAInput"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end">

        <Button
            android:id="@+id/LAButtonLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/button_background"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/textSize12Button"/>

        <Button
            android:id="@+id/LAButtonRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/button_background"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/textSize12Button" />
    </LinearLayout>
</LinearLayout>